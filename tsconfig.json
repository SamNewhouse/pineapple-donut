{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": ".build",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["es2020"],
    "skipLibCheck": true,
    "sourceMap": true,
    "types": ["node", "aws-lambda"]
  },
  "include": ["src/**/*.ts", "src/scripts/create-table.ts"],
  "exclude": ["node_modules", ".build", ".serverless", "src/scripts/**.ts"]
}
